# Invoice Ninja Custom Docker Environment
# Copy this to .env before running docker-compose

# Application Configuration
APP_NAME="Invoice Ninja"
APP_ENV=production
APP_KEY=base64:RR++yx2rJ9kdxbdh3+AmbHLDQu+Q76i++co9Y8ybbno=
APP_DEBUG=false
APP_URL=http://localhost

# Self-hosted mode (enables most features)
NINJA_ENVIRONMENT=selfhost

# PDF Generation
PHANTOMJS_PDF_GENERATION=false
PDF_GENERATOR=snappdf
TRUSTED_PROXIES='*'

# Performance Settings
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ninja
DB_USERNAME=ninja
DB_PASSWORD=ninja
DB_ROOT_PASSWORD=ninjaAdm1nPassword
DB_CONNECTION=mysql

# Initial Admin User
IN_USER_EMAIL=admin@example.com
IN_PASSWORD=changeme!

# Mail Configuration (using log driver for testing)
MAIL_MAILER=log
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS='admin@example.com'
MAIL_FROM_NAME='Invoice Ninja'

# Docker Environment
IS_DOCKER=true
SCOUT_DRIVER=null
FILESYSTEM_DISK=local

# Security
REQUIRE_HTTPS=false

# Features - All enabled due to paywall bypass
ENABLE_SHOP_API=true
MULTI_DB_ENABLED=false

# Optional: Banking Integration
NORDIGEN_SECRET_ID=
NORDIGEN_SECRET_KEY=

# Optional: Error Tracking
SENTRY_LARAVEL_DSN=

# Timezone and Locale
DEFAULT_TIMEZONE=UTC
DEFAULT_LOCALE=en